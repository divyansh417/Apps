<% if @todo.errors %>

<% @todo.errors.messages.each do |key, value| %>


<h1> <%= key %>, <%= value %> </h1>


<% end %>


<% end %>

<%= form_for @todo do |f| %>

<%= f.label :title %>

<%= f.text_field :title %> <br>

<%= f.label :content %>
<%= f.text_area :content %> <br>


<%= f.label :important %>
<%= f.check_box :important %><br>

<%= f.label :deadline %>
<%= f.datetime_select :deadline %><br>


<%= f.submit %>

<% end %>