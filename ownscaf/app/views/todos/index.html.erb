<h1>Todos#index</h1>
<p>Find me in app/views/todos/index.html.erb</p>

<table>
	
<thead>
	<th>Title</th>
	<th>Content</th>
	<th>Important</th>
	<th>Deadline</th>
	<th>Actions</th>
</thead>


<% @todos.each do |todo| %>


<tr>

	<td><%= todo.title %></td>
	<td><%= todo.content %></td>
	<td><%= todo.important %></td>
	<td><%= todo.deadline %></td>
	<td>
		
		<%= link_to 'Edit', url_for(controller: 'todos', action: 'edit', id: todo.id) %>,
		<%= link_to 'Destroy', url_for(controller: 'todos', action: 'destroy', id: todo.id) , method: :delete , data: {confirm: "Are you Sure?"}%>,

	</td>

</tr>


<% end %>


</table>

<%= link_to 'New Todo', todos_new_path %>